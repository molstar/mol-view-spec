{
  "name": "@molstar/molviewspec",
  "version": "1.8.0",
  "exports": "./mod.ts",
  "publish": {
    "exclude": ["examples/", "tests/", "*.mvsj", "*.mvsx", ".vscode/", ".idea/"]
  },
  "tasks": {
    "test": "deno test --allow-read --allow-write",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check mod.ts",
    "publish:dry": "deno publish --dry-run"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window"]
  }
}
